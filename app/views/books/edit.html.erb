<div class="update-container">
  <h1 class="h1-title">Editing Book</h1>

  <% if @book.errors.any? %>
    <div class="errors-box">
      <p><%= @book.errors.count %> errors prohibited this book from being saved:</p>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
    <div class="form-box">
      <h4 class="form-box-title">Title</h4>
      <%= f.text_field :title, autocomplete: 'off' %>
    </div>

    <div class="form-box">
      <h4 class="form-box-title">Body</h4>
      <%= f.text_area :body %>
    </div>

    <div class="form-box">
      <%= f.submit 'Update Book' %>
    </div>
  <% end %>
</div>

<p>
    <%= link_to "Show", book_path(@book.id) %> |
    <%= link_to "Back", books_path %>
</p>